<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="UchatChatBox" parent="GtkWidget">
        <child>
            <object class="GtkBox">
                <property name="margin-start">20</property>
                <property name="margin-bottom">10</property>
                <property name="margin-top">10</property>
                <property name="margin-end">20</property>
                <child>
                    <object class="GtkCenterBox">
                        <property name="orientation">horizontal</property>
                        <property name="height-request">130</property>
                        <property name="hexpand">true</property>
                        <child type="start">
                            <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="hexpand">true</property>
                                <child>
                                    <object class="GtkBox">
                                        <property name="overflow">hidden</property>
                                        <property name="width-request">90</property>
                                        <property name="height-request">90</property>
                                        <style>
                                            <class name="avatar"/>
                                        </style>
                                        <child>
                                            <object class="GtkPicture" id="avatar">
                                                <property name="paintable">resources/img/logo.png</property>
                                                <property name="halign">center</property>
                                                <property name="valign">center</property>
                                                <property name="keep-aspect-ratio">false</property>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkCenterBox">
                                        <property name="orientation">vertical</property>
                                        <child type="start">
                                            <object class="GtkLabel" id="name">
                                                <property name="halign">start</property>
                                                <property name="max-width-chars">15</property>
                                                <property name="label">name</property>
                                            </object>
                                        </child>
                                        <child type="end">
                                            <object class="GtkLabel" id="message">
                                                <property name="halign">start</property>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkCenterBox">
                                <property name="orientation">vertical</property>
                                <child type="start">
                                    <object class="GtkLabel" id="time">
                                        <property name="label">time</property>
                                    </object>
                                </child>
                                <child type="end">
                                    <object class="GtkLabel" id="seen">
                                        <property name="label">\\//</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>